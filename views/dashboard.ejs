<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE-edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="css/bootstrap.min.css" type="text/css">
    <link rel="stylesheet" href="font/bootstrap-icons.css" type="text/css">
</head>
<body>
    <nav class="navbar navbar-light bg-light px-3">
        <a class="navbar-brand text-primary" href="/">Express Bank</a>
        <div class="navbar-text d-flex flex-column text-end">
            <span>
                Welcome, <%- locals.userFirstName %>
            </span>
            <span>
                Account Number: <%- locals.userLoginId %>
            </span>
            <a href="/logout"><button class="btn btn-outline-secondary">Logout</button></a>
        </div>
    </nav>
    <div class="d-flex justify-content-between">
        <% if (locals.userType == 'admin') { %>
            <h1 class="m-3">Admin Dashboard</h1>
        <% } else { %>
            <h1 class="m-3">Dashboard</h1>
        <% } %>
        <div class="d-flex align-items-center p-3 gap-3">
            <a href="/profile"><button class="btn btn-primary">View Profile</button></a>
            <% if (locals.userType == 'employee') { %>
                <% if (locals.targetUserLoginId) { %>
                    <a href="/search"><button class="btn btn-primary">End Proxy</button></a>
                    <span>
                        Viewing Customer Account: <%- locals.targetUserLoginId %>
                    </span>
                <% } else { %>
                    <a href="/search"><button class="btn btn-primary">Start Proxy</button></a>
                <% } %>
            <% } %>
        </div>
    </div>
    <div class="container-fluid px-0">
        <div class="mt-5">
            <% if (locals.userType != 'admin') { %>
                <div class="rounded d-flex justify-content-center gap-5">
                    <div class="p-5 shadow-lg bg-light" style="width: 400px;">
                        <h3>
                            <span>
                                <i class="bi bi-1-circle-fill" style="color: red"></i>
                            </span>
                            Savings
                        </h3>
                        <div class="d-flex justify-content-between mb-4">
                            <span>Current Balance:</span>
                            <span>$<%- locals.savingsAccountBalance %></span>
                        </div>
                        <div class="text-end">
                            <a href="/something-here"><button class="btn btn-primary">Deposit/Withdraw</button></a>
                            <a href="/transfer"><button class="btn btn-primary">Transfer</button></a>
                            <a href="/account-details"><button class="btn btn-secondary">Details</button></a>
                        </div>
                    </div>
                    <div class="p-5 shadow-lg bg-light" style="width: 400px;">
                        <h3>
                            <span>
                                <i class="bi bi-2-circle-fill" style="color: orange"></i>
                            </span>
                            Checking
                        </h3>
                        <div class="d-flex justify-content-between mb-4">
                            <span>Current Balance:</span>
                            <span>$<%- locals.checkingAccountBalance %></span>
                        </div>
                        <div class="text-end">
                            <a href="/transfer"><button class="btn btn-primary">Transfer</button></a>
                            <a href="/account-details"><button class="btn btn-secondary">Details</button></a>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="d-flex justify-content-center gap-5">
                    <button class="btn btn-primary" onclick="window.location.href='/admin-update-password'">Update customer password</button>
                    <button class="btn btn-primary" onclick="window.location.href='/elevate-role'">Elevate Roles</button>
                </div>
            <% } %>
        </div>
    </div>
</body>
</html>